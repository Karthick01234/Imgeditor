<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name> IMG editor </name>
	<description>
	   This app is a image editing application
	</description>
	<author href="localhost/imgeditor" email="gkskarthi32@gmail.com">
	  karthick s
	</author>
    <content src="index.html" />
	<plugin name="cordova-plugin-whitelist" spec="1" />
	<plugin name="phonegap-plugin-media-recorder" source="npm" />
	<plugin name="cordova-plugin-file" source="npm" spec="4.3.3" />
	<plugin name="cordova-plugin-file-transfer" source="npm" spec="1.6.3" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="d.png" platform="android" />
	<platform name="android">
	</platform> 
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
